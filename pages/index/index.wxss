@import "../../lib/common.wxss";
page{
    background: #EAEAEA;
}
.card-box-qr{
    width: 270rpx;
    height: 360rpx;
    line-height: 4r0px;
    border-radius: 12rpx;
    background-color: rgba(255, 255, 255, 1);
    color: rgba(24, 125, 240, 1);
    font-size: 28rpx;
    text-align: center;
    flex: 0 0 270rpx;
    margin-right: 8rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}
.card-box-line2{
    margin-top: 50rpx;
}
.name-padding{
    padding-bottom: 52rpx;
}
.card-info-line2 .card-base-label{
    margin-right: 54rpx;
}
.card-qr-img{
    position: absolute;
}

.card-info-state{
    display: inline-block;
    width: 100rpx;
    height: 36rpx;
    line-height: 40rpx;
    border-radius: 22rpx;
    background-color: rgba(253, 255, 0, 1);
    text-align: center;
    color: rgba(16, 16, 16, 1);
    font-size: 24rpx;
}
.scan-box{
    margin-top: 20rpx;
}
.scan-box-btn{
    background: #ffffff;
    width: 328rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 12rpx;
    text-align: center;
}

.notice-box{
    margin-top: 20rpx;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 12rpx;
    background: #ffffff;
    text-align: center;
}
.notice-box-tips{
    color: #E10B0B;
    padding-left: 28rpx;
    display: flex;
    align-items: center;
}
.notice-box-tips .iconfont{
    margin-right: 10rpx;
}
.notice-box-line{
    width: 2rpx;
    height: 52rpx;
    background: #D5D5D5;
    margin: 0rpx 32rpx;
    flex: 0 0 auto;
}
.notice-box-text{
    padding-right: 28rpx;
    flex: 1;
}

.list-box{
    margin-top: 20rpx;
    width: 100%;
    line-height: 40rpx;
    border-radius: 12rpx;
    background: #ffffff;
}
.list-box-warp{
    padding: 28rpx 0rpx 28rpx 20rpx;
}
.list-item{
 font-size: 26rpx;
}
.list-item-date{
    width: 94rpx;
    height: 44rpx;
    line-height: 44rpx;
    border-radius: 40rpx;
    background-color: rgba(242, 242, 242, 1);
    text-align: center;
    flex: 0 0 94rpx;
    margin-right: 20rpx;
}
.list-item-record{
    flex: 1;
    border-bottom: 2rpx solid #D5D5D5;
    margin-bottom: 20rpx;
    position: relative;
}
.list-item-record:after{
    content: "";
    position: absolute;
    bottom: -3rpx;
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    background-color:  #D5D5D5

}
.list-item:last-child .list-item-record{
    border-bottom:none;
}
.list-item:last-child .list-item-record:after{
    content: "";
     width: 0rpx;
    height: 0rpx;
}
.record-li{
    height: 44rpx;
    line-height: 44rpx;
    border-radius: 40rpx;
    padding: 0rpx 28rpx;
    margin-bottom: 20rpx;
    color: #999999;
    background-color: #EAEAEA;
    margin-right: 20rpx;
    
}
.list-item-red{
    color:#FF8369;
    background-color: #FFDDD6;
}
.record-line{
    padding: 0rpx 34rpx;
}
.record-state{
    flex: 0 0 52rpx;
}
.record-time{
    display: flex;
    align-items: center;
    flex: 0 0 110rpx;
}
.record-time .iconfont{
    margin-right: 10rpx;
}

.body-top{
    background-color: #F8D45E;
    width: 1000rpx;
    height: 218rpx;
    left: -125rpx;
    border-radius:0 0 50% 50%;
    position: absolute;
    top: 0;
    z-index: -1;
}

.qr-box{
    width: 700rpx;
    height: 780rpx;
    line-height: 40rpx;
    border-radius: 32rpx;
    background-color: rgba(255, 255, 255, 1);
    color: rgba(24, 125, 240, 1);
    text-align: center;
    margin-top: 66rpx;
}
.qr-box-con{
    padding: 46rpx 100rpx 32rpx;
}
.qr-con-info-logo{
    font-size: 32rpx;
}
.logo-url{
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    overflow: hidden;
}
.qr-con-info-logo .iconfont{
    font-size: 26rpx;
    margin-left: 10rpx;
    line-height: 30rpx;
}
.name-txt{
    font-size: 32rpx;
    color: #101010;
    font-weight: bold;
    margin-left: 28rpx;
}
.qr-con-img{
    margin-top: 36rpx;
}
.qr-ref{
    padding-top: 20rpx;
    line-height: 30rpx;
    font-size: 24rpx;
}